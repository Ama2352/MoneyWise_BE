<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="CategoryBreakdownReport" pageWidth="595" pageHeight="842" leftMargin="20" rightMargin="20" whenNoDataType="AllSectionsNoDetail">
    <parameter name="startDate" class="java.time.LocalDate"/>
    <parameter name="endDate" class="java.time.LocalDate"/>
    <parameter name="currencySymbol" class="java.lang.String">
        <defaultValueExpression><![CDATA["VND"]]></defaultValueExpression>
    </parameter>
    <field name="category" class="java.lang.String"/>
    <field name="totalIncome" class="java.math.BigDecimal"/>
    <field name="totalExpense" class="java.math.BigDecimal"/>
    <field name="incomePercentage" class="java.math.BigDecimal"/>
    <field name="expensePercentage" class="java.math.BigDecimal"/>
    <title>
        <band height="100">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="100" backcolor="#2C3E50"/>
                <graphicElement>
                    <pen lineWidth="0"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="0" y="15" width="555" height="40" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="26" isBold="true"/>
                </textElement>
                <text><![CDATA[CATEGORY BREAKDOWN REPORT]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="55" width="555" height="30" forecolor="#ECF0F1"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="13" isItalic="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Reporting Period: " + $P{startDate}.format(java.time.format.DateTimeFormatter.ofPattern("dd/MM/yyyy")) + " - " + $P{endDate}.format(java.time.format.DateTimeFormatter.ofPattern("dd/MM/yyyy"))]]></textFieldExpression>
            </textField>
        </band>
    </title>
    <columnHeader>
        <band height="50">
            <rectangle>
                <reportElement x="0" y="10" width="555" height="35" backcolor="#34495E"/>
                <graphicElement>
                    <pen lineWidth="0"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="20" y="15" width="90" height="25" forecolor="#FFFFFF"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Category]]></text>
            </staticText>
            <staticText>
                <reportElement x="120" y="15" width="80" height="25" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Total Income]]></text>
            </staticText>
            <staticText>
                <reportElement x="210" y="15" width="80" height="25" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Total Expense]]></text>
            </staticText>
            <staticText>
                <reportElement x="300" y="15" width="80" height="25" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Income %]]></text>
            </staticText>
            <staticText>
                <reportElement x="390" y="15" width="80" height="25" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Expense %]]></text>
            </staticText>
            <staticText>
                <reportElement x="480" y="15" width="55" height="25" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Currency]]></text>
            </staticText>
        </band>
    </columnHeader>
    <detail>
        <band height="35">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="30" backcolor="#F8F9FA"/>
                <graphicElement>
                    <pen lineWidth="1" lineColor="#E9ECEF"/>
                </graphicElement>
            </rectangle>
            <textField>
                <reportElement x="20" y="5" width="90" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="11"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{category}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="120" y="5" width="80" height="20" forecolor="#27AE60"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="11" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{totalIncome} != null ? ($P{currencySymbol}.equals("USD") ? new java.text.DecimalFormat("#,##0.00").format($F{totalIncome}) : new java.text.DecimalFormat("#,##0").format($F{totalIncome})) : "0"]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="210" y="5" width="80" height="20" forecolor="#E74C3C"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="11" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{totalExpense} != null ? ($P{currencySymbol}.equals("USD") ? new java.text.DecimalFormat("#,##0.00").format($F{totalExpense}) : new java.text.DecimalFormat("#,##0").format($F{totalExpense})) : "0"]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="300" y="5" width="80" height="20"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="11"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{incomePercentage} != null ? new java.text.DecimalFormat("#0.0").format($F{incomePercentage}) + "%" : "0.0%"]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="390" y="5" width="80" height="20"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="11"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{expensePercentage} != null ? new java.text.DecimalFormat("#0.0").format($F{expensePercentage}) + "%" : "0.0%"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="480" y="5" width="55" height="20"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{currencySymbol}]]></textFieldExpression>
            </textField>
        </band>
    </detail>
    <summary>
        <band height="80">
            <rectangle>
                <reportElement x="0" y="20" width="555" height="60" backcolor="#F8F9FA"/>
                <graphicElement>
                    <pen lineWidth="0"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="290" y="50" width="250" height="20" forecolor="#95A5A6"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="10" isItalic="true"/>
                </textElement>
                <text><![CDATA[Generated by Money Management System]]></text>
            </staticText>
            <textField pattern="dd/MM/yyyy HH:mm">
                <reportElement x="380" y="30" width="160" height="20" forecolor="#95A5A6"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[new java.util.Date()]]></textFieldExpression>
            </textField>
        </band>
    </summary>
</jasperReport>