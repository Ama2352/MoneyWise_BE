<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="CashFlowReport" pageWidth="595" pageHeight="842" whenNoDataType="NoPages">

    <parameter name="startDate" class="java.time.LocalDate"/>
    <parameter name="endDate" class="java.time.LocalDate"/>
    <parameter name="cashFlowData" class="JavaProject.MoneyManagement_BE_SE330.models.dtos.transaction.CashFlowSummaryDTO"/>
    <parameter name="currencySymbol" class="java.lang.String">
        <defaultValueExpression><![CDATA["VND"]]></defaultValueExpression>
    </parameter>

    <title>
        <band height="100">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="100" backcolor="#2C3E50"/>
                <graphicElement>
                    <pen lineWidth="0"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="0" y="15" width="555" height="40" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="26" isBold="true"/>
                </textElement>
                <text><![CDATA[CASH FLOW SUMMARY REPORT]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="55" width="555" height="30" forecolor="#ECF0F1"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="13" isItalic="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Reporting Period: " + $P{startDate}.format(java.time.format.DateTimeFormatter.ofPattern("dd/MM/yyyy")) + " - " + $P{endDate}.format(java.time.format.DateTimeFormatter.ofPattern("dd/MM/yyyy"))]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <detail>
        <band height="420">
            <staticText>
                <reportElement x="20" y="20" width="515" height="25" forecolor="#2C3E50"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="16" isBold="true"/>
                </textElement>
                <text><![CDATA[Financial Overview]]></text>
            </staticText>

            <rectangle>
                <reportElement x="50" y="60" width="200" height="80" backcolor="#E8F5E8"/>
                <graphicElement>
                    <pen lineWidth="2" lineColor="#27AE60"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="60" y="70" width="180" height="20" forecolor="#27AE60"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Total Income]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="60" y="95" width="180" height="35" forecolor="#27AE60"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="18" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{cashFlowData}.getTotalIncome() != null ? ($P{currencySymbol}.equals("USD") ? new java.text.DecimalFormat("#,##0.00").format($P{cashFlowData}.getTotalIncome()) : new java.text.DecimalFormat("#,##0").format($P{cashFlowData}.getTotalIncome())) + " " + $P{currencySymbol} : "0 " + $P{currencySymbol}]]></textFieldExpression>
            </textField>

            <rectangle>
                <reportElement x="300" y="60" width="200" height="80" backcolor="#FDF2F2"/>
                <graphicElement>
                    <pen lineWidth="2" lineColor="#E74C3C"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="310" y="70" width="180" height="20" forecolor="#E74C3C"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Total Expenses]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="310" y="95" width="180" height="35" forecolor="#E74C3C"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="18" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{cashFlowData}.getTotalExpenses() != null ? ($P{currencySymbol}.equals("USD") ? new java.text.DecimalFormat("#,##0.00").format($P{cashFlowData}.getTotalExpenses()) : new java.text.DecimalFormat("#,##0").format($P{cashFlowData}.getTotalExpenses())) + " " + $P{currencySymbol} : "0 " + $P{currencySymbol}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="20" y="160" width="515" height="25" forecolor="#2C3E50"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="16" isBold="true"/>
                </textElement>
                <text><![CDATA[Visual Analysis]]></text>
            </staticText>

            <barChart>
                <chart isShowLegend="true">
                    <reportElement x="50" y="200" width="450" height="190"/>
                    <chartTitle>
                        <font fontName="DejaVu Sans" size="14" isBold="true"/>
                        <titleExpression><![CDATA["Income vs Expenses Comparison"]]></titleExpression>
                    </chartTitle>
                    <chartSubtitle/>
                    <chartLegend textColor="#000000" position="Bottom">
                        <font fontName="DejaVu Sans" size="10"/>
                    </chartLegend>
                </chart>
                <categoryDataset>
                    <categorySeries>
                        <seriesExpression><![CDATA["Income"]]></seriesExpression>
                        <categoryExpression><![CDATA["Financial Data"]]></categoryExpression>
                        <valueExpression><![CDATA[$P{cashFlowData}.getTotalIncome() != null ? $P{cashFlowData}.getTotalIncome() : 0]]></valueExpression>
                    </categorySeries>
                    <categorySeries>
                        <seriesExpression><![CDATA["Expenses"]]></seriesExpression>
                        <categoryExpression><![CDATA["Financial Data"]]></categoryExpression>
                        <valueExpression><![CDATA[$P{cashFlowData}.getTotalExpenses() != null ? $P{cashFlowData}.getTotalExpenses() : 0]]></valueExpression>
                    </categorySeries>
                </categoryDataset>
                <barPlot>
                    <plot labelRotation="0.0"/>
                    <itemLabel color="#000000">
                        <font fontName="DejaVu Sans" size="10"/>
                    </itemLabel>
                    <categoryAxisFormat labelRotation="0.0">
                        <axisFormat>
                            <labelFont>
                                <font fontName="DejaVu Sans" size="10"/>
                            </labelFont>
                            <tickLabelFont>
                                <font fontName="DejaVu Sans" size="10"/>
                            </tickLabelFont>
                        </axisFormat>
                    </categoryAxisFormat>
                    <valueAxisFormat>
                        <axisFormat>
                            <labelFont>
                                <font fontName="DejaVu Sans" size="10"/>
                            </labelFont>
                            <tickLabelFont>
                                <font fontName="DejaVu Sans" size="10"/>
                            </tickLabelFont>
                        </axisFormat>
                    </valueAxisFormat>
                </barPlot>
            </barChart>

            <line>
                <reportElement x="20" y="419" width="515" height="1"/>
                <graphicElement>
                    <pen lineWidth="2" lineColor="#BDC3C7"/>
                </graphicElement>
            </line>
        </band>
    </detail>

    <summary>
        <band height="80">
            <rectangle>
                <reportElement x="0" y="20" width="555" height="60" backcolor="#F8F9FA"/>
                <graphicElement>
                    <pen lineWidth="0"/>
                </graphicElement>
            </rectangle>
            <textField isBlankWhenNull="true">
                <reportElement x="20" y="40" width="350" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="12" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[
                    $P{cashFlowData}.getTotalIncome() != null && $P{cashFlowData}.getTotalExpenses() != null &&
                    $P{cashFlowData}.getTotalIncome().compareTo($P{cashFlowData}.getTotalExpenses()) >= 0
                    ? "✓ Positive Cash Flow"
                    : (
                        $P{cashFlowData}.getTotalIncome() != null && $P{cashFlowData}.getTotalExpenses() != null
                        ? "⚠ Negative Cash Flow"
                        : "Financial Analysis"
                    )
                ]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="290" y="50" width="250" height="20" forecolor="#95A5A6"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="10" isItalic="true"/>
                </textElement>
                <text><![CDATA[Generated by Money Management System]]></text>
            </staticText>
            <textField pattern="dd/MM/yyyy HH:mm">
                <reportElement x="380" y="30" width="160" height="20" forecolor="#95A5A6"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[new java.util.Date()]]></textFieldExpression>
            </textField>
        </band>
    </summary>
</jasperReport>